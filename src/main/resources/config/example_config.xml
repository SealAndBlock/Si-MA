<?xml version = "1.0"?>
<sim>
    <agents>
        <agent name=">BLOCKCHAIN_AGENT" nb="10">
            <protocols>
                <protocol tag="BitcoinProtocol">
                    <class>sima.core.protocol.Blockchain</class>
                    <arg name="blockSize">10</arg>
                </protocol>
                <protocol tag="EtherumProtocol">
                    <class>sima.core.protocol.Blockchain</class>
                    <arg name="coinbaseValue">15</arg>
                </protocol>
            </protocols>
            <behaviors>
                <behavior tag="GreedyBlockchain">
                    <class>sima.core.behavior.GreedyBlockchain</class>
                    <arg>Argument1</arg>
                    <arg>Argument2</arg>
                </behavior>
            </behaviors>
        </agent>

        <agent name="CHORD_AGENT" nb="1">
            <protocols>
                <protocol tag="BitcoinProtocol">
                    <class>sima.core.protocol.CHORD</class>
                </protocol>
            </protocols>
        </agent>
    </agents>
</sim>