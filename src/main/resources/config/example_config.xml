<?xml version = "1.0"?>
<sim>
    <agents>
        <sima.core.agent name=">BLOCKCHAIN_AGENT" nb="10">
            <protocols>
                <sima.core.protocol tag="BitcoinProtocol">
                    <class>sima.core.sima.core.protocol.Blockchain</class>
                    <arg name="blockSize">10</arg>
                </sima.core.protocol>
                <sima.core.protocol tag="EtherumProtocol">
                    <class>sima.core.sima.core.protocol.Blockchain</class>
                    <arg name="coinbaseValue">15</arg>
                </sima.core.protocol>
            </protocols>
            <behaviors>
                <sima.core.behavior tag="GreedyBlockchain">
                    <class>sima.core.sima.core.behavior.GreedyBlockchain</class>
                    <arg>Argument1</arg>
                    <arg>Argument2</arg>
                </sima.core.behavior>
            </behaviors>
        </sima.core.agent>

        <sima.core.agent name="CHORD_AGENT" nb="1">
            <protocols>
                <sima.core.protocol tag="BitcoinProtocol">
                    <class>sima.core.sima.core.protocol.CHORD</class>
                </sima.core.protocol>
            </protocols>
        </sima.core.agent>
    </agents>
</sim>